<simulation-configuration>
	<name>Smart Home Agents</name>
	<category>SHAgents</category>
	<behavior>com.github.angerona.fw.def.DefaultBehavior</behavior>
	<description>
		Smart Home Agents by Ilya Gutnikov, BMSTU, 2017.
	</description>

	<infinite-cycle>true</infinite-cycle>

	<agent-instance>
		<name>SmartHome</name>
        <agent-config source="config/agents/smarthome_agent.xml" />
        <beliefbase-config source="config/beliefbases/sh_beliefbase.xml" />
	</agent-instance>

	<agent-instance>
		<name>User</name>
        <agent-config source="config/agents/sh_agent.xml" />
        <beliefbase-config source="config/beliefbases/sh_beliefbase.xml" />
	</agent-instance>

	<agent-instance>
		<name>RealWorld</name>
        <agent-config source="config/agents/sh_agent.xml" />
        <beliefbase-config source="config/beliefbases/sh_beliefbase.xml" />
	</agent-instance>

</simulation-configuration>